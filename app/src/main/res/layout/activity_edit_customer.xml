<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background_new">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".EditCustomer"
        >

        <EditText
            android:id="@+id/startSubField"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edittextstyle"
            android:ems="10"
            android:fontFamily="@font/advent_pro_medium"
            android:hint="dd/mm/yyyy"
            android:inputType="textPersonName"
            android:textColor="#F5F5F5"
            android:textColorHint="#A9AEAF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.892"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lastNameField" />

        <EditText
            android:id="@+id/endSubField"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/edittextstyle"
            android:ems="10"

            android:fontFamily="@font/advent_pro_medium"
            android:hint="dd/mm/yyyy"
            android:inputType="textPersonName"
            android:textColor="#F5F5F5"
            android:textColorHint="#A9AEAF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.754"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/startSubField" />

        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edittextstyle"
            android:ems="10"
            android:fontFamily="@font/advent_pro_medium"
            android:inputType="textPersonName"
            android:textColor="#F5F5F5"
            android:textColorHint="#A9AEAF"
            android:hint="No spaces or dashes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.888"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/startSubField" />

        <EditText
            android:id="@+id/MACIDField"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="572dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/edittextstyle"
            android:ems="10"
            android:fontFamily="@font/advent_pro_medium"
            android:inputType="textPersonName"
            android:textColor="#F5F5F5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.793"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/packageTypeField"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="295dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edittextstyle"
            android:ems="10"
            android:fontFamily="@font/advent_pro_medium"
            android:inputType="textPersonName"
            android:textColor="#F5F5F5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.408"
            app:layout_constraintStart_toEndOf="@+id/editPackageType"
            app:layout_constraintTop_toBottomOf="@+id/endSubField" />

        <EditText
            android:id="@+id/totalAmountField"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:background="@drawable/edittextstyle"
            android:textColor="#F5F5F5"
            android:fontFamily="@font/advent_pro_medium"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.735"
            app:layout_constraintStart_toEndOf="@+id/editTotalAmount"
            app:layout_constraintTop_toBottomOf="@+id/endSubField" />

        <TextView
            android:textColor="#F5F5F5"
            android:fontFamily="@font/advent_pro_medium"

            android:id="@+id/EditFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="8dp"
            android:text="First Name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.151"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/EditLastName"
            android:layout_width="wrap_content"
            android:textColor="#F5F5F5"
            android:fontFamily="@font/advent_pro_medium"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="8dp"
            android:text="Last Name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.153"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EditFirstName" />

        <EditText
            android:id="@+id/firstNameField"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edittextstyle"
            android:ems="10"
            android:fontFamily="@font/advent_pro_medium"
            android:inputType="textPersonName"
            android:textColor="#F5F5F5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.892"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/lastNameField"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edittextstyle"
            android:ems="10"
            android:fontFamily="@font/advent_pro_medium"
            android:inputType="textPersonName"
            android:textColor="#F5F5F5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.892"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/firstNameField" />

        <TextView
            android:id="@+id/editStartSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/advent_pro_medium"
            android:text="Start Sub."
            android:textColor="#F5F5F5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.148"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EditLastName" />

        <TextView
            android:id="@+id/editEndSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/advent_pro_medium"
            android:text="End Sub."
            android:textColor="#F5F5F5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.145"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editStartSub" />

        <TextView
            android:id="@+id/editTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="85dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/advent_pro_medium"
            android:text="Total Amount"
            android:textColor="#F5F5F5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.129"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editEndSub" />

        <RadioGroup
            android:id="@+id/gpaid"
            android:layout_width="307dp"
            android:layout_height="33dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="340dp"
            android:fontFamily="@font/advent_pro_medium"
            android:orientation="horizontal"
            android:textColor="#F5F5F5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/tpaid"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:buttonTint="@color/cyan"
                android:fontFamily="@font/advent_pro_medium"
                android:text="Totally Paid"
                android:textColor="#F5F5F5" />

            <RadioButton
                android:id="@+id/ppaid"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/cyan"
                android:fontFamily="@font/advent_pro_medium"
                android:text="Partially Paid"
                android:textColor="#F5F5F5" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/gmopay"
            android:layout_width="276dp"
            android:layout_height="76dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="420dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/advent_pro_medium"
            android:orientation="vertical"
            android:textColor="#F5F5F5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.352"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/visa"
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/cyan"
                android:fontFamily="@font/advent_pro_medium"
                android:text="Visa"
                android:textColor="#F5F5F5" />

            <RadioButton
                android:id="@+id/debit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/cyan"
                android:fontFamily="@font/advent_pro_medium"
                android:text="Debit"
                android:textColor="#F5F5F5" />

            <RadioButton
                android:id="@+id/cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/cyan"
                android:fontFamily="@font/advent_pro_medium"
                android:text="Cash"
                android:textColor="#F5F5F5" />
        </RadioGroup>

        <TextView
            android:id="@+id/editModeOfPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="395dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/advent_pro_semibold"
            android:text="Method of Payment"
            android:textColor="#F5F5F5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.146"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/editPackageType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="516dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/advent_pro_medium"
            android:text="Package Type"
            android:textColor="#F5F5F5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.161"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/editMacID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="575dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/advent_pro_medium"
            android:text="MAC ID"
            android:textColor="#F5F5F5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.165"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/updateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="656dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/roundbutton"
            android:fontFamily="@font/advent_pro_medium"
            android:text="Update"
            android:textColor="#F5F5F5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:textColor="#F5F5F5"
            android:fontFamily="@font/advent_pro_medium"
            android:text="Mobile Number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.133"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editEndSub" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>